mixin html
  doctype html
  html(xmlns="http://www.w3.org/1999/xhtml", version="XHTML+RDFa 1.0")
    head
      meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
      meta(name="viewport" content="width=device-width, user-scalable=no")
      meta(name="format-detection" content="telephone=no")
      title
        | Test
      +styles
      +scripts
    body(class!=classes)
      block

mixin scripts
  script var vars = !{JSON.stringify(vars)}
  - for (var index in vars.scripts) {
    script(src=vars.scripts[index])
  - }

mixin styles
  - for (var index in vars.styles) {
    link(type="text/css", rel="stylesheet", href=vars.styles[index])
  - }

mixin invoke(name, data)
  +#{name}(data || {})
    block
